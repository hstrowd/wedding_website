  <%= form_for(@trivia_question) do |f| %>
    <% if @trivia_question.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@trivia_question.errors.count, "error") %> prohibited this trivia question from being saved:</h2>

        <ul>
        <% @trivia_question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <br/>
    <div class="field">
      <%= f.label :quiz %><br />
      <%= f.select :quiz_id, Quiz.all.collect{ |q| [q.title, q.id] }, :required => true %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :question %><br />
      <%= f.text_area :question, :cols => 58, :rows => 2, :required => true %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :weight %><br />
      <%= f.text_field :weight, :required => true %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :raw_correct_answers %><br />
      <%= f.text_field :correct_answers_raw, :size => 80 %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :raw_incorrect_answers %><br />
      <%= f.text_field :incorrect_answers_raw, :size => 80 %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :enabled, :hidden => @trivia_question.new_record? %><br/>
      <%= f.check_box :enabled, :hidden => @trivia_question.new_record? %>
    </div>

    <br/>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
